{
  "task": "yolov3",
  "type": "phantomobj",

  "batch_size": 4,
  "vbatch_size": 10,
  "model_def": "configs/phantom/model2.cfg",

  "data_config": {
    "type": "random",
    "classes": 1,
    "widths": 0.1,
    "landmarks": 8,
    "expected_objects": 1,
    "iters": 4000,
    "valid": "/scratch/phantom_data/labels/",
    "names": "configs/phantom/classes.names"
  },

  "pretrained_weights": "weights/darknet53.conv.74",

  "learning_rate": 0.0001,
  "n_cpu": 8,
  "input_dim": 3,
  "img_size": 416,
  "checkpoint_interval": 1,
  "evaluation_interval": 1,
  "compute_map": false,
  "multiscale_training": true,
  "gradient_accumulations": 2,
  "epochs": 20,

  "iou_thres": 0.5,
  "conf_thres": 0.8,
  "nms_thres": 0.5,

  "checkpoint_path": "checkpoints/yolov3_phantomobj2_{}.pth",
  "log_path": "logs/phantomobj2_logs",
  "val_metrics": "logs/phantomobj2_metrics.txt",
  "val_boxplot": "logs/phantomobj2_boxplot_{}.png",
  "val_examples": "output/phantomobj2"

}
