{
  "task": "yolov3",
  "type": "twoobj",

  "batch_size": 4,
  "vbatch_size": 10,
  "model_def": "configs/{}/model.cfg",

  "data_config": "configs/{}/data.txt",
  "data_config2": {
    "type": "csv",
    "classes": 2,
    "train": "configs/{}/train.csv",
    "valid": "configs/{}/valid.csv",
    "names": "configs/{}/classes.names"
  },

  "pretrained_weights": "weights/darknet53.conv.74",

  "learning_rate": 0.0001,
  "n_cpu": 8,
  "img_size": 416,
  "checkpoint_interval": 1,
  "evaluation_interval": 1,
  "compute_map": false,
  "multiscale_training": true,
  "gradient_accumulations": 2,
  "epochs": 40,

  "iou_thres": 0.5,
  "conf_thres": 0.5,
  "nms_thres": 0.5,

  "checkpoint_path": "checkpoints/",
  "log_path": "{}_logs",
  "val_metrics": "{}_metrics.txt"

}
